<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/medical_office_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Central Bronx Hospital"
            android:textColor="@color/colorBlackk"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/medical_office_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3424 Kossuth Avenue"
            android:textSize="18sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold"
                android:text="borough : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/medicaid_office_borough_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRONX"
                android:textStyle="bold"
                android:textSize="18sp"

                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold"
                android:text="zip code : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/medicaid_office_zip_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10467"
                android:textStyle="bold"
                android:textSize="18sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold"
                android:text="phone # : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/medicaid_office_phonenumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (718) 920-1070"
                android:textStyle="bold"
                android:textSize="18sp"

                />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>